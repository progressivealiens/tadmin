<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_05"
        android:background="@drawable/cell_shape">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.techsalt.tadmin.customviews.MyTextview
                android:id="@+id/tv_serial_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.techsalt.tadmin.customviews.MyTextview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="Guard\nName"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent" />

            <com.techsalt.tadmin.customviews.MyTextview
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_05"
                android:layout_weight=".4">

                <ImageView
                    android:id="@+id/iv_guards"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>


            </TableRow>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".6"
                android:gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.techsalt.tadmin.customviews.MyTextview

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:text="Guard \nCode"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent" />

                    <com.techsalt.tadmin.customviews.MyTextview
                        android:id="@+id/tv_guard_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.techsalt.tadmin.customviews.MyTextview
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:text="Mode"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent" />

                    <com.techsalt.tadmin.customviews.MyTextview
                        android:id="@+id/tv_login_via"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                </TableRow>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.techsalt.tadmin.customviews.MyTextview
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:text="Duty Hour"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent" />

                    <com.techsalt.tadmin.customviews.MyTextview
                        android:id="@+id/tv_duty_hours"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                </TableRow>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.techsalt.tadmin.customviews.MyTextview
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:text="Checkin \nBattery"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent" />

                    <com.techsalt.tadmin.customviews.MyTextview
                        android:id="@+id/tv_checkin_battery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/colorGreen"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.techsalt.tadmin.customviews.MyTextview
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:text="Checkout Battery"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent" />

                    <com.techsalt.tadmin.customviews.MyTextview
                        android:id="@+id/tv_checkout_battery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                </TableRow>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.techsalt.tadmin.customviews.MyTextview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="Checkin Time"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent" />

            <com.techsalt.tadmin.customviews.MyTextview
                android:id="@+id/tv_checkin_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.techsalt.tadmin.customviews.MyTextview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="Checkin \nAddress"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent" />

            <com.techsalt.tadmin.customviews.MyTextview
                android:id="@+id/tv_checkin_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.techsalt.tadmin.customviews.MyTextview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="Checkout Time"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent" />

            <com.techsalt.tadmin.customviews.MyTextview
                android:id="@+id/tv_checkout_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.techsalt.tadmin.customviews.MyTextview
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="Checkout \nAddress"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent" />

            <com.techsalt.tadmin.customviews.MyTextview
                android:id="@+id/tv_checkout_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_shape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:weightSum="1">

                <com.techsalt.tadmin.customviews.MyButton
                    android:id="@+id/btn_patrolling_history"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/selector_button"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:text="Patrolling History"
                    android:textColor="@drawable/text_selector" />

                <View
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent" />

                <com.techsalt.tadmin.customviews.MyButton
                    android:id="@+id/btn_view_tracking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="View Tracking"
                    android:background="@drawable/selector_button"
                    android:textColor="@drawable/text_selector"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"/>
            </LinearLayout>

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px" />


    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack" />

</LinearLayout>